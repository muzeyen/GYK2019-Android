<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fotograf"
                android:layout_width="180dp"
                android:layout_marginRight="10dp"
                android:layout_height="80dp"
                android:text="Fotoğraf"
                android:textSize="18sp"
                android:background="@color/sky_blue"/>

            <Button
                android:id="@+id/video"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Video"
                android:textSize="18sp"
                android:background="@color/mediumPurple"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/ses"
                android:layout_width="180dp"
                android:layout_marginRight="10dp"
                android:layout_height="80dp"
                android:text="Ses Kayıt"
                android:textSize="18sp"
                android:background="@color/pale_violet_red"/>

            <Button
                android:id="@+id/harita"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Harita"
                android:textSize="18sp"
                android:background="@color/light_slate_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/sms"
                android:layout_width="180dp"
                android:layout_marginRight="10dp"
                android:layout_height="80dp"
                android:text="SMS Gönder"
                android:textSize="18sp"
                android:background="@color/dark_cyan"/>

            <Button
                android:id="@+id/arama"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Arama Yap"
                android:textSize="18sp"
                android:background="@color/brown"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>